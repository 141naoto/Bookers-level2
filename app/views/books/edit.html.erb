<div class="body">
	<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

<div class="field">
<p>Title</p>
<%= f.text_field :Title, class:"book_title col-xs-12" %>
</div>

<div class="field">
<p>Opinion</p>
<%= f.text_area :Opinion, class:"book_body col-xs-12" %>
</div>

<div class="action">
<%= f.submit "Update Book", class:"btn btn-primary col-xs-12 book_#{@book.id}", :style=>:"margin-top:10px;" %>
</div>
<% end %>

<div class="field" style="margin-top: 10px;">
<p>
<%= link_to"show ", book_path(@book), class:"books_#{@book.id} link", :style=>:"color:gray;" %>
|
<%= link_to " Back", books_path, class:"back link", :style=>:"color:gray;" %>
</p>
</div>
</div>